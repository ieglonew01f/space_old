.container
  .row
    .col.col-xl-4.offset-md-4
      .ui-block.login-standalone{:style => "margin-top:100px;"}
        .ui-block-content
          %h4 Change your password
          = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
            = devise_error_messages!
            = f.hidden_field :reset_password_token
            .form-group.label-floating.is-empty
              %label.control-label New password
              = f.password_field :password, autofocus: true, autocomplete: "off"
              %span.material-input
            .form-group.label-floating.is-empty
              %label.control-label Confirm new password
              = f.password_field :password_confirmation, autocomplete: "off"
              %span.material-input
            = f.submit "Change my password", :class => "btn btn-primary btn-lg full-width"
